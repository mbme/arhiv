{
  "name": "arhiv-ui3",
  "private": true,
  "license": "MIT",
  "version": "0.0.1",
  "description": "arhiv UI",
  "main": "",
  "scripts": {
    "compiler-errors": "tsc --noEmit --project tsconfig.json",
    "build:js": "node build.js",
    "build:css": "TAILWIND_MODE=build postcss ./src/index.css ./src/workspace/workspace.css --dir public/",
    "watch:js": "node build.js --watch",
    "watch:css": "TAILWIND_MODE=watch postcss --watch ./src/index.css ./src/workspace/workspace.css --dir public/",
    "prod:build:js": "NODE_ENV=production yarn build:js",
    "prod:build:css": "NODE_ENV=production yarn build:css",
    "prod:build": "yarn run prod:build:js && yarn run prod:build:css",
    "lint": "eslint --cache --ext .ts src/",
    "fmt": "prettier --write src/"
  },
  "dependencies": {
    "@codemirror/commands": "^0.20.0",
    "@codemirror/lang-markdown": "^0.20.0",
    "@codemirror/language": "^0.20.0",
    "@codemirror/search": "^0.20.0",
    "@codemirror/state": "^0.20.0",
    "@codemirror/view": "^0.20.0",
    "a11y-dialog": "^7.3.0",
    "preact": "^10.6.6"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "autoprefixer": "^10.2.6",
    "esbuild": "^0.14.5",
    "postcss": "^8.3.0",
    "postcss-cli": "^9.0.1",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.7"
  }
}
