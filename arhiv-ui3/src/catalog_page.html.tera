{% extends "base" %}

{% macro catalog_entry(entry) %}
<li class="mb-10 p-4 min-h-6rem">
  <div class="flex justify-between border-b-2 mb-4 text-gray-400 uppercase font-mono text-sm">
    <div>
      {{ entry.document_type }} {{ entry.id }}
    </div>

    <div>
      {{ entry.updated_at | date }}
    </div>
  </div>

  <div class="markup max-h-8rem line-clamp-4 mb-4">
    {{ entry.preview | safe }}
  </div>

  <a href="/documents/{{ entry.id }}" class="text-xl">
    open
  </a>
</li>
{% endmacro catalog_entry %}


{% block content %}

<h1 class="mb-8 uppercase">
  {{document_type}} catalog
</h1>

<ul>
  {% for entry in page.items %}
  {{ self::catalog_entry(entry = entry) }}
  {% endfor %}
</ul>

{% endblock %}
