{
  "name": "arhiv",
  "private": true,
  "license": "MIT",
  "version": "0.0.1",
  "description": "arhiv UI",
  "main": "",
  "type": "module",
  "scripts": {
    "compiler-errors": "tsc --noEmit --project tsconfig.json",
    "clean": "rm -f public/*.js* public/*.css*",
    "build:js": "node build.ts",
    "build:css": "tailwindcss -i src/ui/index.css -o public/index.css",
    "build": "npm run build:js && npm run build:css",
    "watch:js": "node build.ts --watch",
    "watch:css": "npm run build:css -- --watch",
    "prod:build:js": "NODE_ENV=production npm run build:js",
    "prod:build:css": "NODE_ENV=production npm run build:css -- --minify",
    "prod:build": "npm run prod:build:js && npm run prod:build:css",
    "lint": "eslint --cache src/",
    "test": "node --import tsx --test 'src/ui/**/*.test.ts' 'src/ui/**/*.test.tsx' --test-reporter spec",
    "fmt": "prettier --write src/",
    "check-fmt": "prettier --check src/"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.0.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@headlessui/react": "2.2.0",
    "@lezer/highlight": "^1.2.1",
    "@preact/signals-core": "^1.6.0",
    "codemirror": "^6.0.1",
    "deep-eql": "^5.0.2",
    "element-internals-polyfill": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shallow-equal": "^3.1.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.5",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/react": "^16.0.0",
    "@types/deep-eql": "^4.0.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "esbuild": "^0.25.0",
    "global-jsdom": "^26.0.0",
    "jsdom": "^26.0.0",
    "scraper": "github:mbme/scraper#semver:v2.11.0",
    "tailwindcss": "^4.0.5",
    "tsx": "^4.5.0"
  }
}
