{
  "name": "arhiv",
  "private": true,
  "license": "MIT",
  "version": "0.0.1",
  "description": "arhiv UI",
  "main": "",
  "type": "module",
  "scripts": {
    "compiler-errors": "tsc --noEmit --project tsconfig.json",
    "clean": "rm -f public/*.js* public/*.css*",
    "build:js": "tsx build.ts",
    "build:css": "TAILWIND_MODE=build postcss ./src/ui/index.css --dir public/",
    "build": "npm run build:js && npm run build:css",
    "watch:js": "tsx build.ts --watch",
    "watch:css": "TAILWIND_MODE=watch postcss --watch ./src/ui/index.css --dir public/",
    "prod:build:js": "NODE_ENV=production npm run build:js",
    "prod:build:css": "NODE_ENV=production npm run build:css",
    "prod:build": "npm run prod:build:js && npm run prod:build:css",
    "lint": "eslint --cache --ext .ts --ext .tsx src/",
    "test": "node --import tsx --test 'src/ui/**/*.test.ts' 'src/ui/**/*.test.tsx' --test-reporter spec",
    "fmt": "prettier --write src/",
    "check-fmt": "prettier --check src/"
  },
  "dependencies": {
    "@codemirror/commands": "^6.0.0",
    "@codemirror/lang-markdown": "^6.0.0",
    "@codemirror/language": "^6.0.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@headlessui/react": "^2.1.0",
    "@preact/signals-core": "^1.6.0",
    "deep-eql": "^5.0.2",
    "element-internals-polyfill": "^1.1.11",
    "react": "^18",
    "react-dom": "^18",
    "shallow-equal": "^3.1.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/react": "^16.0.0",
    "@types/deep-eql": "^4.0.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.2.6",
    "esbuild": "^0.23.0",
    "global-jsdom": "^24.0.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^11.0.0",
    "scraper": "github:mbme/scraper#semver:v2.9.0",
    "tailwindcss": "^3.0.7",
    "tsx": "^4.5.0"
  }
}
