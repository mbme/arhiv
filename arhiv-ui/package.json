{
  "name": "arhiv-ui",
  "private": true,
  "license": "MIT",
  "version": "0.0.1",
  "description": "arhiv UI",
  "main": "",
  "type": "module",
  "scripts": {
    "compiler-errors": "tsc --noEmit --project tsconfig.json",
    "clean": "rm -f public/*.js* public/*.css*",
    "build:js": "tsx build.ts",
    "build:css": "TAILWIND_MODE=build postcss ./src/ui/index.css --dir public/",
    "watch:js": "tsx build.ts --watch",
    "watch:css": "TAILWIND_MODE=watch postcss --watch ./src/ui/index.css --dir public/",
    "prod:build:js": "NODE_ENV=production yarn run build:js",
    "prod:build:css": "NODE_ENV=production yarn run build:css",
    "prod:build": "yarn run prod:build:js && yarn run prod:build:css",
    "lint": "eslint --cache --ext .ts --ext .tsx src/",
    "test": "ava",
    "fmt": "prettier --write src/"
  },
  "dependencies": {
    "@codemirror/commands": "^6.0.0",
    "@codemirror/lang-markdown": "^6.0.0",
    "@codemirror/language": "^6.0.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "@headlessui/react": "^1.7.13",
    "element-internals-polyfill": "^1.1.11",
    "react": "^18",
    "react-dom": "^18",
    "shallow-equal": "^3.1.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "@testing-library/react": "^14.0.0",
    "autoprefixer": "^10.2.6",
    "esbuild": "^0.17.10",
    "global-jsdom": "^9.0.1",
    "jsdom": "^22.0.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^3.0.7"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--no-experimental-fetch",
      "--no-experimental-global-customevent",
      "--no-warnings",
      "--loader=tsx"
    ]
  }
}
